#! /bin/bash

source $(dirname $0)/nb-curator-setup

# Git OS/CPU-specific micromamba binary
mkdir -p ${MM}
cd ${MM}
curl -Ls $URL | tar -xvj bin/micromamba

micromamba config append channels conda-forge
micromamba config set channel_priority strict
micromamba self-update

micromamba activate  # this activates the base environment
micromamba create -n nbcurator -c conda-forge
micromamba activate nbcurator
micromamba install --yes python=3.11 pip mamba ruamel.yaml uv papermill setuptools ipykernel -c conda-forge

